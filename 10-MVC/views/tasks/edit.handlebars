<h1>Editando a tarefa: {{task.title}}</h1>

<form action="/tasks/edit" method="post">
<input type="hidden" name="id" value="{{task.id}}">

    <div class="form-control">
        <label for="title">Titulo</label>
        <input type="text" name="title" id="title" placeholder="Titulo..." value="{{task.title}}">
    </div>
    <div class="form-control">
        <label for="description">Descrição</label>
        <textarea name="description" id="description" placeholder="Descrição...">{{task.description}}</textarea>
    </div>
    <input type="submit" value="Editar">


</form>