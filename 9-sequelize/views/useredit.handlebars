<h1>Atualizar úsuario: {{user.name}}</h1>

<form action="/users/edit" method="post" class="form" >
    <input type="hidden" name="id" value="{{user.id}}">
    <div class="form-control">
        <label for="name">Nome:</label>
        <input type="text" name="name" id="name"  value="{{user.name}}">
    </div>
    <div class="form-control">
        <label for="occupation">Ocupação:</label>
        <input type="text" name="occupation" id="occupation" value="{{user.occupation}}">
    </div>
    <div class="form-control form-checkbox">
        {{#if user.newsletter}}
            <input type="checkbox" name="newsletter" id="newsletter" checked>
        {{else}}
            <input type="checkbox" name="newsletter" id="newsletter">
        {{/if}}

        <label for="newsletter">Enviar promoção?</label>
    </div>
    <input type="submit" value="Editar">

</form>
<div class="address-container">
    <h2>Endereços:</h2>
    <form action="/address/create" method="post">
    <input type="hidden" name="UserId" value="{{user.id}}">
    <div class="form-control">
        <label for="Street">Rua:</label>
        <input type="text" name="Street" id="Street" placeholder="cidade...">   
    </div>
    <div class="form-control">
        <label for="number">Número:</label>
        <input type="text" name="number" id="number" placeholder="número...">

    </div>
    <div class="form-control">
        <label for="city">Cidade:</label>
        <input type="text" name="city" id="city" placeholder="cidade...">

    </div>

    <input type="submit" value="Incluir endereço">
    


    </form>
</div>